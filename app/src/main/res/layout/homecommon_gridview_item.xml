<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/lightGrey"
    card_view:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/gift_100"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="100dp">
        </ImageView>

        <TextView
            android:id="@+id/bestSeller_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
             />

        <TextView
            android:id="@+id/bestSeller_offerPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/redToolbar"
             >
        </TextView>
        <TextView
            android:id="@+id/bestSeller_offerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/redToolbar"
            >
        </TextView>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/getCuponCode"
                android:layout_height="30dp"
                android:padding="3dp"
                android:text="Get Coupon"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cancel_rounded_button"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>