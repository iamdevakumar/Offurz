<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/rate_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/redToolbar"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="RATING" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:progressTint="@color/yellow"
        android:numStars="5"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/redToolbar"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:gravity="center"

        android:textAllCaps="true"
        android:text="Review" />

    <EditText
        android:id="@+id/commentEdtTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/redToolbar"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"

        android:hint="Enter comment here..."
       />

    <Button
        android:id="@+id/rateBtn"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/cancel_rounded_button"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="SUBMIT" />
</LinearLayout>
</RelativeLayout>