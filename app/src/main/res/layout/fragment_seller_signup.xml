
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context="com.shadowws.offurz.Fragments.SellerSignupFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Seller sign up" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/seller_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColorHint="#000"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/seller_name"
            android:layout_width="match_parent"
            android:inputType="text"
            android:theme="@style/EditTextHint"
            android:drawableLeft="@drawable/ic_action_name_black"
            android:drawablePadding="10dp"
            android:hint="@string/username"
            android:textColor="#000"
            android:layout_height="wrap_content">

        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/seller_mobileNo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_name_layout"
        android:textColorHint="#000"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/seller_mobileNo"
            android:layout_width="match_parent"
            android:layout_below="@+id/input_layout_name"
            android:inputType="number"
            android:drawablePadding="10dp"
            android:hint="@string/mobileNo"
            android:textColor="#000"
            android:maxLength="10"
            android:drawableLeft="@drawable/ic_action_phone_black"
            android:theme="@style/EditTextHint"
            android:layout_height="wrap_content">
        </android.support.design.widget.TextInputEditText>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/seller_sign_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_mobileNo_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textColor="#fff"
        android:background="@drawable/round_button"
        android:text="Submit" />

</RelativeLayout>
</ScrollView>