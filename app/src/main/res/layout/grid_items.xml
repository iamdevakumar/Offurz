<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/lightGrey"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/grid_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="120dp">
    </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
    <TextView
        android:id="@+id/grid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/grid_text_sec"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/redToolbar"
        android:textSize="18dp" >
    </TextView>
                    </LinearLayout>
                <!--<Button-->
                    <!--android:id="@+id/home_addcart_btn"-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/pager"-->
                    <!--android:background="@drawable/cancel_rounded_button"-->
                    <!--android:text="Get Coupon"-->
                    <!--android:textColor="@color/redToolbar" />-->
            </LinearLayout>

        </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>