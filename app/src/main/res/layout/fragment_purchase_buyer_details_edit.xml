<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.shadowws.offurz.Fragments.ManageAdsEditFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="CONFIRM ORDER"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbdt_Buyername_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:layout_marginTop="20dp"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_buyerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:textColor="#000"
                android:hint="Buyer Name"
                android:textSize="16dp"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_mobile_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Mobile Number"
                android:textColor="#000"
                android:textSize="16dp"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_productName_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_edit_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Product Name"
                android:textSize="16dp"
                android:textColor="#000"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_cuponCode_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_cuponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Cupon Code"
                android:textSize="16dp"
                android:textColor="@color/colorAccent"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_price_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Price"
                android:textSize="16dp"
                android:textColor="#000"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_offPercentage_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_offPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Offered Percentage"
                android:textSize="16dp"
                android:textColor="#000"
                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_offPrice_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_OffPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:textColor="#000"
                android:hint="Offered Price"
                android:textSize="16dp"

                android:inputType="textPersonName"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/pbd_purchaseDate_layout"
            android:layout_width="match_parent"
            app:errorEnabled="true"
            android:textColorHint="#000"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/pbd_PurchaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/EditTextHint"
                android:ems="10"
                android:hint="Purchase Date"
                android:textSize="16dp"
                android:textColor="#000"
                android:inputType="date"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:id="@+id/pbd_edit_confirm"
                android:text="Confirm"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Back"
                android:layout_marginLeft="20dp"
                android:id="@+id/pbd_edit_cancel"
                android:background="@drawable/round_button"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>