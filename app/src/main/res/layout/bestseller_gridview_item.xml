<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/lightGrey"
        android:layout_marginTop="10dp"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
            <ImageView
                android:id="@+id/grid_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/gift_100"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_height="100dp">
            </ImageView>
                   <TextView
                    android:id="@+id/bestSeller_productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp" />
                <!--<TextView-->
                    <!--android:id="@+id/bestSeller_companyName"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:textColor="@color/redToolbar"-->
                    <!--android:textSize="18dp" >-->
                <!--</TextView>-->
                <TextView
                    android:id="@+id/bestSeller_offerPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/redToolbar"
                    android:textSize="18dp" >
                </TextView>
                <TextView
                    android:id="@+id/bestSeller_offerPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/redToolbar"
                    android:textSize="14dp" >
                </TextView>
            <TextView
                android:id="@+id/bestSeller_fulldetails"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/cancel_rounded_button"
                android:text="View"
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:textSize="16dp" >
            </TextView>
      </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>